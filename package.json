{
  "name": "bryggan-desktop",
  "productName": "bryggan-desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "main/index.js",
  "scripts": {
    "start": "yarn && electron .",
    "build": "next build renderer && next export renderer",
    "dist": "yarn run build && build",
    "pack": "yarn run build && build --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "git@github.com:sjofartstidningen/bryggan-desktop.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "bundle": {
    "name": "Bryggan"
  },
  "dependencies": {
    "electron-better-ipc": "^0.1.1",
    "electron-next": "^3.1.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-util": "^0.10.2",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "next": "^7.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "3.0.10",
    "electron-builder": "^20.38.1",
    "eslint": "^5.9.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2"
  },
  "config": {
    "forge": "./forge.config.js",
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.{js,json,css,md,html,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  }
}
