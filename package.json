{
  "name": "bryggan-desktop",
  "productName": "Bryggan",
  "version": "0.0.0",
  "description": "My Electron application description",
  "main": "main/entry.js",
  "scripts": {
    "test": "jest --env=jsdom",
    "start": "electron .",
    "start:prod": "yarn build && ELECTRON_IS_DEV=0 yarn start",
    "watch": "nodemon --exec 'yarn start' --watch main --watch shared",
    "build": "./scripts/icon.js icon indd && next build renderer && next export renderer",
    "dist": "yarn run build && build",
    "pack": "yarn run build && build --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "git@github.com:sjofartstidningen/bryggan-desktop.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "bundle": {
    "name": "Bryggan"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.2.0",
    "electron-better-ipc": "^0.1.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^2.2.17",
    "electron-next": "^3.1.5",
    "electron-store": "^2.0.0",
    "electron-unhandled": "^2.1.0",
    "electron-util": "^0.10.2",
    "electron-window-state": "^5.0.3",
    "esm": "^3.0.84",
    "execa": "^1.0.0",
    "glob": "^7.1.3",
    "lodash.debounce": "^4.0.8",
    "mitt": "^1.1.3",
    "next": "^7.0.2",
    "p-queue": "^3.0.0",
    "polished": "^2.3.1",
    "prop-types": "^15.6.2",
    "qs": "^6.6.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "styled-components": "^4.1.2"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-styled-components": "^1.9.2",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "3.0.10",
    "electron-builder": "^20.38.1",
    "eslint": "^5.9.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.2",
    "react-testing-library": "^5.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "jest --env=jsdom --passWithNoTests  --findRelatedTests",
        "eslint --fix",
        "git add"
      ],
      "*.{js,json,css,md,html,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  }
}
